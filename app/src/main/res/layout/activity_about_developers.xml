<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#00008B">

    <!-- About the Game -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="At Luminous Labs, we believe in the magic of gaming—where every tap, swipe, and click
        unlocks a new world of adventure, mystery, and excitement. Our passionate team of dreamers and creators
        is dedicated to crafting mobile games that captivate the imagination and keep players coming back for more.
        From mind-bending puzzles to heart-pounding action, we blend artistry with technology to design experiences that
        are as visually stunning as they are engaging. We don’t just make games; we build universes where players can lose themselves,
        challenge their skills, and have fun along the way. Driven by innovation and a love for storytelling, Luminous Labs is on a mission
        to redefine what mobile games can be—creating unforgettable moments that connect, inspire, and spark joy in every corner of the world."
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"/>

    <!-- Title Text -->
    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the Developers"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Developer Info -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <!-- Developer 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 1: FADZILLAH BINTI ROSLAN."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <!-- Developer 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 2: MASTURINA BINTI ISMADOL."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 3: SITI NUR ANISAH BINTI NASRI."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 4: NURUL IRDINA BINTI MOHD FADZLI."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 5: NURUL IFFAH HUMAIRA BINTI AZMAN."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>



        </LinearLayout>
    </ScrollView>

    <!-- Close Button -->
    <Button
        android:id="@+id/closeAboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="18sp"
        android:background="@drawable/round_button"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>
</LinearLayout>


    
