<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/gradient_bg">

    <!-- About the Game -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The rapid advancement of technology and the increasing use of digital devices have significantly impacted the cognitive development of the younger generation."
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp"/>

    <!-- Title Text -->
    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the Developers"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Developer Info -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <!-- Developer 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 1: FADZILLAH BINTI ROSLAN."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <!-- Developer 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 2: MASTURINA BINTI ISMADOL."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 3: SITI NUR ANISAH BINTI NASRI."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 4: NURUL IRDINA BINTI MOHD FADZLI."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 5: NURUL IFFAH HUMAIRA BINTI AZMAN."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>



        </LinearLayout>
    </ScrollView>

    <!-- Close Button -->
    <Button
        android:id="@+id/closeAboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="18sp"
        android:background="@drawable/round_button"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>
</LinearLayout>


    
