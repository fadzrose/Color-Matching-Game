<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#00008B">

    <!-- Title Text -->
    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About the Developers"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- Developer Info -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <!-- Developer 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 1: Passionate Android Developer with expertise in mobile gaming apps."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <!-- Developer 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developer 2: Enthusiastic about creating intuitive UIs and clean code."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"/>

            <!-- About the Game -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This memory game was developed using Android and Java with a focus on fun gameplay and smooth performance."
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Close Button -->
    <Button
        android:id="@+id/closeAboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:textSize="18sp"
        android:background="@drawable/round_button"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"/>
</LinearLayout>
